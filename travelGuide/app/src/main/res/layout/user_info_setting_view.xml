<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/name"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/name"
                style="@style/EdittextStyle"
                android:layout_width="match_parent"
                android:hint="@string/name"
                android:singleLine="true"
                android:text="user" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/email"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email"
                style="@style/EdittextStyle"
                android:layout_width="match_parent"
                android:hint="@string/prompt_email"
                android:singleLine="true"
                android:text="user@gmail.com" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_container"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/password"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/password"
                style="@style/EdittextStyle"
                android:layout_width="match_parent"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:text="123" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_password_container"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/confirm_pass"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/confirm_password"
                style="@style/EdittextStyle"
                android:layout_width="match_parent"
                android:hint="@string/prompt_confirm_password"
                android:inputType="textPassword"
                android:text="123" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_container"
            android:visibility="gone"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/phone"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/phone"
                style="@style/EdittextStyle"
                android:layout_width="match_parent"
                android:hint="@string/phone_number"
                android:visibility="gone"
                android:inputType="phone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/regist_height"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/languages"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relayoutlayout_language">


                <com.travel.travelguide.View.MultiSelectionSpinner
                    android:id="@+id/language"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:prompt="@string/choose_a_language"
                    android:text="Language" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorPrimary"
                    />

            </RelativeLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="Interests"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/interest"
                style="@style/EdittextStyle"
                android:layout_width="match_parent"
                android:hint="@string/interests"
                android:singleLine="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/social_media"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearlayout_social_container">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:id="@+id/button_add_social"
                    android:drawableLeft="@drawable/plus"
                    android:text="@string/add"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/social_container_title"
                    android:background="@color/transparent"
                    android:textSize="@dimen/general_text_size"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_height="30dp" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/regist_width"
                android:text="@string/location"
                style="@style/regist_TextviewStyle"
                android:layout_height="@dimen/regist_height" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@color/transparent"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:textAllCaps="false"
                    android:text="@string/select_location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/general_text_size"

                    />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/language"
                    android:background="@color/colorPrimary"
                    />
            </LinearLayout>

        </LinearLayout>




        <RelativeLayout
            android:id="@+id/relativelayout_travel_date"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/travel_date_title"
                style="@style/EdittextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/calendar"
                android:hint="@string/google_plus_link"
                android:text="Travel date" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/button_add_travel_date"
                android:drawableLeft="@drawable/plus"
                android:text="@string/add_travel_date"
                android:layout_toRightOf="@+id/travel_date_title"
                android:background="@color/transparent"
                android:textSize="@dimen/general_text_size"
                android:layout_marginTop="15dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:id="@+id/linearlayout_travel_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/travel_date_title"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/travel_from_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: "

                    android:textColor="@color/colorPrimary"

                    android:textSize="@dimen/general_text_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textview_from"
                    style="@style/TextviewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="May 10, 2016" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout_travel_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearlayout_travel_from"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/travel_to_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To: "

                    android:textColor="@color/colorPrimary"

                    android:textSize="@dimen/general_text_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textview_to"
                    style="@style/TextviewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="May 30, 2016" />
            </LinearLayout>


        </RelativeLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/aboutme"
            style="@style/EdittextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/about"
            android:visibility="gone"
            android:hint="@string/tell_something_about_yourself"
             />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>